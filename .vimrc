" Basic Configuration
set nocompatible
set number
set relativenumber

" For Filetypes
filetype on
filetype indent on

" Cursor Lines for more readibility
set cursorline
set cursorcolumn

" For Tab Spacing
set tabstop=4
set shiftwidth=4
set expandtab
set autoindent

" While Searching
set incsearch
set hlsearch

" Color Scheme
set background=dark
colorscheme gruvbox


syntax on

