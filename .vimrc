" Basic Configuration
set nocompatible
set number
set relativenumber

" For Filetypes
filetype on
filetype indent on

" Cursor Lines for more readibility
set cursorline
set cursorcolumn

" For Tab Spacing
set shiftwidth=4
set tabstop=4
set autoindent

" While Searching
set incsearch
set hlsearch

" Color Scheme
"colorscheme material 
set termguicolors
let ayucolor="dark"
colorscheme ayu


syntax on

